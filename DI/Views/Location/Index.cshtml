@model DI.Models.Location.LocationIndexVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Items)
        {
        <tr>
            <td>@Html.DisplayFor(i => item.Name)</td>
            <td>@Html.DisplayFor(i => item.Address)</td>
            <td><a asp-controller="Location" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a></td>
            <td><a asp-controller="Location" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a></td>
        </tr>
        }
    </tbody>
</table>