@model DI.Models.Task.TaskEditVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit" asp-controller="Task" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="LimitTime" class="control-label">Limit Time</label>
        <input asp-for="LimitTime" class="form-control" />
        <span asp-validation-for="LimitTime" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Budget" class="control-label">Budget</label>
        <input asp-for="Budget" class="form-control" />
        <span asp-validation-for="Budget" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Location" class="control-label"></label>
        <select asp-for="Location" class="form-control">
            @foreach (var item in Model.Locations)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="Category" class="control-label"></label>
        <select asp-for="Category" class="form-control">
            @foreach (var item in Model.Categories)
            {
                <option value="@item.ID">@item.Text</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            @foreach (var item in Model.Statuses)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>